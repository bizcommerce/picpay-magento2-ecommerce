<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_convert_quote">
            <field name="picpay_interest_amount">
                <aspect name="to_order" />
            </field>
            <field name="base_picpay_interest_amount">
                <aspect name="to_order" />
            </field>
            <field name="picpay_charge_id">
                <aspect name="to_order" />
            </field>
            <field name="picpay_merchant_id">
                <aspect name="to_order" />
            </field>
            <field name="picpay_cardholder_auth_id">
                <aspect name="to_order" />
            </field>
            <field name="picpay_challenge_status">
                <aspect name="to_order" />
            </field>
        </fieldset>

        <fieldset id="sales_convert_order">
            <field name="picpay_interest_amount">
                <aspect name="to_cm"/>
                <aspect name="to_invoice" />
                <aspect name="to_shipment" />
            </field>
            <field name="base_picpay_interest_amount">
                <aspect name="to_cm"/>
                <aspect name="to_invoice" />
                <aspect name="to_shipment" />
            </field>
        </fieldset>
    </scope>
</config>
